<% provide(:title, "Sign in") %>
<h1>Sign in</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path,:html=>{class:'form-horizontal'}) do |f| %>
      <fieldset>
      <div class="form-group">
      <%= f.label :email,class:"col-md-4 control-label" %>
      <div class="col-md-4">
      <%= f.text_field :email,class:"form-control" %>
      </div>
      </div>
      </fieldset>
      <fieldset>
      <div class="form-group">
      <%= f.label :password,class:'col-md-4 control-label' %>
      <div class="col-md-4">
      <%= f.password_field :password,class:"form-control" %>
      </div>
      </div>
      </fieldset>

      <fieldset>
       <div class="form-group text-center">
         <%= f.submit "登陆", class: "btn btn-primary" %> &nbsp;&nbsp; <%= link_to "注册新用户", new_user_path %>
       </div>
      </fieldset>
<% end %>
   
  </div>
</div>