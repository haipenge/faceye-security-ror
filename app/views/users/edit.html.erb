<% provide(:title, 'Sign up') %>
<h1>编辑用户:</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user,:html=>{class:'form-horizontal'}) do |f| %>
    <div class="panel">
   <%= render 'shared/error_messages',object:f.object %>
    </div>
      <fieldset>
       <div class="form-group">
        <%= f.label :name ,class:"col-md-4 control-label" %>
        <div class="col-md-4">
         <%= f.text_field :name,class:'form-control' %>
         </div>
      </div>
      </fieldset>

      <fieldset>
       <div class="form-group">
       <%= f.label :email,class:"col-md-4 control-label" %>
       <div class="col-md-4">
         <%= f.text_field :email,class:"form-control" %>
      </div>
      </div>
      </fieldset>

      <fieldset>
       <div class="form-group">
      <%= f.label :password,class:'col-md-4 control-label' %>
      <div class="col-md-4">
      <%= f.password_field :password,class:"form-control" %>
      </div>
      </div>
      </fieldset>

      <fieldset>
       <div class="form-group">
      <%= f.label :password_confirmation, "Confirmation",class:"col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.password_field :password_confirmation,class:"form-control" %>
      </div>
      </div>
      </fieldset>

      <fieldset>
      	 <div class="form-group text-center">
            <%= f.submit "编辑用户", class: "btn btn-large btn-primary" %>
      	 </div>
      </fieldset>

    <% end %>
  </div>
</div>
